<UserControl x:Class="Captura.Recent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mui="clr-namespace:Captura">
    <Grid>
        <ScrollViewer>
            <DockPanel Margin="10">
                <TextBlock TextWrapping="Wrap"
                           DockPanel.Dock="Top"
                           Text="A List of files created in this session" 
                           Margin="0,0,0,10"/>

                <mui:ModernButton DockPanel.Dock="Bottom" 
                                  Content="Open Output Folder"
                                  Margin="5"
                                  HorizontalAlignment="Right"
                                  IconData="M 19,19L 37,19L 37,27L 19,27L 19,19 Z M 39,19L 57,19L 57,23L 39,23L 39,19 Z M 19,29L 37,29L 37,33L 19,33L 19,29 Z M 39,25L 57,25L 57,29L 39,29L 39,25 Z M 19,35L 37,35L 37,39L 19,39L 19,35 Z M 39,31L 57,31L 57,39L 39,39L 39,31 Z M 19,41L 37,41L 37,45L 19,45L 19,41 Z M 39,41L 57,41L 57,45L 39,45L 39,41 Z M 19,47L 37,47L 37,51L 19,51L 19,47 Z M 39,47L 57,47L 57,51L 39,51L 39,47 Z M 19,53L 37,53L 37,57L 19,57L 19,53 Z M 39,53L 57,53L 57,57L 39,57L 39,53 Z "
                                  ToolTip="Open Output Folder"
                                  Click="OpenOutputFolder"/>
                <ScrollViewer>
                    <ItemsControl Margin="0,10,0,0" 
                                  DisplayMemberPath="Content" 
                                  ItemsSource="{Binding RecentList, Mode=TwoWay}"/>
                </ScrollViewer>
            </DockPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
